---
export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<header class="mt-4 text-center">
			<h1 class="text-4xl font-bold ">Kibru</h1>
			<nav class="">
				<a href="/">Blog</a> | <a  href="/projects">Projects</a> | <a href="/resume">Resume</a>
			</nav>
		</header>
		<main class="px-4 md:px-20 xl:px-40  mt-2">
			<slot />
		</main>
	</body>
</html>
